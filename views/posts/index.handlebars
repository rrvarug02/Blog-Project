<h1>Blog Posts</h1>
{{#if user}}
    <a href="/posts/new">Create New Post</a>
{{/if}}
<ul>
    {{#each posts}}
        <li>
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            {{#if this.imageUrl}}
                <img src="{{this.imageUrl}}" alt="Post image" width="200">
            {{/if}}
            <a href="/posts/{{this.id}}/edit">Edit</a>
        </li>
    {{/each}}
</ul>